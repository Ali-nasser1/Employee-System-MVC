@model Department
@{
    ViewData["Title"] = "Details";
} 

<h1>Department @Model.Name details</h1
<br />
<div class="form-group">
    <label class="col-form-label" asp-for="Code"> </label>
    <input readonly class="form-control" asp-for="Code" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Name"> </label>
    <input readonly class="form-control" asp-for="Name" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="CreatedDate"> </label>
    <input readonly class="form-control" asp-for="CreatedDate" />
</div>
<div class="mt-3 mb-3 text-warning"> Do you want to Edit this ?</div>
<a asp-action="Edit" asp-route-id ="@Model.Id" class="btn btn-secondary mr-1">Edit</a>
<a asp-action="Index" class="btn btn-light">Back to list</a>
