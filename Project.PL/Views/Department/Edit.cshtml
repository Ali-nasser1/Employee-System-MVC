@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name </h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"> </label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"> </label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="CreatedDate"> </label>
        <input class="form-control" asp-for="CreatedDate" />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>

    <button type="submit" value="Save" class="btn btn-primary mr-1">Edit</button>
    <a asp-action="Index" class="btn btn-light">Back to list</a>
</form>

