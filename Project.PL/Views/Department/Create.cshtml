@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create a new department</h1
<br />
<form asp-action="Create">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"> </label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"> </label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="CreatedDate"> </label>
        <input class="form-control" asp-for="CreatedDate" />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>

    <button type="submit" value="Submit" class="btn btn-primary mr-1">Submit</button>
    <a asp-action="Index" class="btn btn-light">Back to list</a>
</form>

@section ClientValidationSection
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}